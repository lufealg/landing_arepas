---
interface Props {
  image: string;
  title: string;
  price: number;
}

const { image, title, price } = Astro.props;
---

<div class="flex flex-col items-center justify-center w-full" data-product-id={title} data-product-title={title} data-product-price={price} data-product-image={image}>
    <div class="relative w-64 h-64">
        <img src={image} alt={title} class="w-full h-full object-cover rounded-lg shadow-md hover:shadow-lg transition-shadow" />
    </div>
    <p class="text-xl font-bold text-center mt-4">{title}</p>
    <p class="text-lg font-semibold text-center mt-1">${price.toFixed(2)}</p>
    
</div>






